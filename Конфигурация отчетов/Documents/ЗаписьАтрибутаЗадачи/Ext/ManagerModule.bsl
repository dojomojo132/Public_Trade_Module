Функция СоздатьЗаписьАтрибута(Задача, Атрибут, Значение, Автор) Экспорт 
	
	Док = Документы.ЗаписьАтрибутаЗадачи.СоздатьДокумент();
	Док.Дата        = ТекущаяДата();
	Док.Задача    = Задача; 
	Док.Атрибут = Атрибут;
	Док.Значение    = Значение; 
	Док.Автор = Автор;

	Док.Записать(РежимЗаписиДокумента.Проведение);
	
	Сообщить(Строка(Атрибут) + " успешно обновлен!" );
	Возврат Док.Ссылка;
	
КонецФункции
