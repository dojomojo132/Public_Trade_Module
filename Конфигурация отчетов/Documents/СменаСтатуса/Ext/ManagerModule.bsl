	ДокСменыСтатуса = Документы.СменаСтатусаЗадачи.СоздатьДокумент();
	ДокСменыСтатуса.Дата = ТекущаяДата();
	ДокСменыСтатуса.ЗаказКлиента = Заказ;
	ДокСменыСтатуса.ПланРодитель = ПланРодитель;
	ДокСменыСтатуса.ТекущийПлан = ТекПлан;
	ДокСменыСтатуса.НовыйСтатус = НовыйСтатус;
	ДокСменыСтатуса.ТипЗадачи = ТипЗадачи;
	ДокСменыСтатуса.Записать(РежимЗаписиДокумента.Проведение);
	
