<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="RetailConfiguration" version="1.0">
    
    <Subsystems>
        <Subsystem name="Торговля">
            <Description>Объекты для продаж и работы с покупателями.</Description>
        </Subsystem>
        <Subsystem name="Склад">
            <Description>Объекты складского учета и инвентаризации.</Description>
        </Subsystem>
        <Subsystem name="Настройки">
            <Description>Администрирование и НСИ.</Description>
        </Subsystem>
    </Subsystems>

    <Constants>
        <Constant name="ПорядокОкругленияЦен">
            <Description>Правило округления при авторасчете розничных цен.</Description>
        </Constant>
        <Constant name="КонтролироватьОстаткиПриСписании">
            <Description>Флаг запрета отрицательных остатков.</Description>
        </Constant>
    </Constants>

    <Catalogs>
        <Catalog name="Номенклатура">
            <Description>Картотека товаров и услуг.</Description>
        </Catalog>
        <Catalog name="Контрагенты">
            <Description>Поставщики товаров.</Description>
        </Catalog>
        <Catalog name="Склады">
            <Description>Места хранения (Торговый зал, Основной склад).</Description>
        </Catalog>
        <Catalog name="Кассы">
            <Description>Места хранения наличных (Сейф, Денежный ящик ККМ).</Description>
        </Catalog>
        <Catalog name="Пользователи">
            <Description>Список сотрудников и их права.</Description>
        </Catalog>
        <Catalog name="КассовоеОборудование">
            <Description>Настройки подключаемого оборудования (ККТ, Сканеры).</Description>
        </Catalog>
        <Catalog name="НалоговыеГруппы">
            <Description>Ставки НДС и привязка к секциям фискального регистратора.</Description>
        </Catalog>
        <Catalog name="ТипыЦен">
            <Description>Виды цен (технический справочник).</Description>
        </Catalog>
        <Catalog name="ВидыДисконтныхКарт">
            <Description>Правила программы лояльности (проценты, пороги).</Description>
        </Catalog>
        <Catalog name="ДисконтныеКарты">
            <Description>Карты покупателей с накоплениями.</Description>
        </Catalog>
        <Catalog name="ПричиныСписания">
            <Description>Аналитика выбытия товаров (Порча, Бой, Недостача).</Description>
        </Catalog>
    </Catalogs>

    <Documents>
        <Document name="ПриходТовара">
            <Description>Оприходование товара от поставщика, расчет цен.</Description>
        </Document>
        <Document name="СписаниеТовара">
            <Description>Списание порчи, боя, недостачи (с контролем остатков).</Description>
        </Document>
        <Document name="ИнвентаризацияТоваров">
            <Description>Переучет и корректировка остатков (План/Факт).</Description>
        </Document>
        <Document name="Переоценка">
            <Description>Установка розничных цен.</Description>
        </Document>
        <Document name="ЧекККМ">
            <Description>Основной документ розничной продажи (управленческий).</Description>
        </Document>
        <Document name="ФискальныйЧек">
            <Description>Технический документ регистрации в ККТ.</Description>
        </Document>
        <Document name="ВозвратТовараОтПокупателя">
            <Description>Оформление возврата от клиента.</Description>
        </Document>
        <Document name="КассоваяСмена">
            <Description>Управление сменой (Открытие/Закрытие/Z-отчет).</Description>
        </Document>
        <Document name="ПриходныйКассовыйОрдер">
            <Description>Поступление наличных в кассу.</Description>
        </Document>
        <Document name="РасходныйКассовыйОрдер">
            <Description>Выдача наличных (инкассация, оплата поставщику).</Description>
        </Document>
    </Documents>

    <AccumulationRegisters>
        <Register name="ОстаткиТоваров">
            <Description>Учет количества товаров в разрезе складов.</Description>
        </Register>
        <Register name="Взаиморасчеты">
            <Description>Учет долгов перед поставщиками.</Description>
        </Register>
        <Register name="ДенежныеСредства">
            <Description>Учет наличных денег в разрезе касс.</Description>
        </Register>
        <Register name="ПродажиПоДисконтнымКартам">
            <Description>Обороты продаж по картам лояльности.</Description>
        </Register>
        <Register name="Продажи">
            <Description>Обороты выручки и себестоимости.</Description>
        </Register>
    </AccumulationRegisters>

    <InformationRegisters>
        <Register name="ЦеныНоменклатуры">
            <Description>Действующие розничные цены.</Description>
        </Register>
        <Register name="ЦеныЗакупки">
            <Description>Последние закупочные цены.</Description>
        </Register>
        <Register name="Штрихкоды">
            <Description>Связь штрихкодов с номенклатурой.</Description>
        </Register>
        <Register name="НастройкиРаспределенияПродаж">
            <Description>Маршрутизация печати чеков по оборудованию.</Description>
        </Register>
    </InformationRegisters>

    <CommonModules>
        <Module name="МенеджерОборудования">
            <Description>Работа с драйверами торгового оборудования (Native).</Description>
        </Module>
        <Module name="ОбщегоНазначения">
            <Description>Вспомогательные процедуры.</Description>
        </Module>
    </CommonModules>

    <Enums>
        <Enum name="ЕдиницыИзмерения">
            <Description>шт, кг, л.</Description>
        </Enum>
        <Enum name="СтавкиНДС">
            <Description>20%, Без НДС.</Description>
        </Enum>
        <Enum name="ТипыОборудования">
            <Description>Сканер, ФР, Эквайринг.</Description>
        </Enum>
        <Enum name="ТипыСкладов">
            <Description>ТорговыйЗал, Основной.</Description>
        </Enum>
        <Enum name="СтатусыИнвентаризации">
            <Description>В работе, Выполнена.</Description>
        </Enum>
        <Enum name="ВидыОплаты">
            <Description>Способы расчета (Наличные, Безналичные, Бонусы).</Description>
        </Enum>
        <Enum name="СтатусыЧекаККМ">
            <Description>Жизненный цикл чека (Пробит, Аннулирован, Отложен).</Description>
        </Enum>
    </Enums>

</Configuration>