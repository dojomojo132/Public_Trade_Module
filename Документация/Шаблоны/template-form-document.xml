<?xml version="1.0" encoding="UTF-8"?>
<Form xmlns="http://v8.1c.ru/8.3/xcf/logform" xmlns:app="http://v8.1c.ru/8.2/managed-application/core" xmlns:cfg="http://v8.1c.ru/8.1/data/enterprise/current-config" xmlns:dcscor="http://v8.1c.ru/8.1/data-composition-system/core" xmlns:dcssch="http://v8.1c.ru/8.1/data-composition-system/schema" xmlns:dcsset="http://v8.1c.ru/8.1/data-composition-system/settings" xmlns:ent="http://v8.1c.ru/8.1/data/enterprise" xmlns:lf="http://v8.1c.ru/8.2/managed-application/logform" xmlns:style="http://v8.1c.ru/8.1/data/ui/style" xmlns:sys="http://v8.1c.ru/8.1/data/ui/fonts/system" xmlns:v8="http://v8.1c.ru/8.1/data/core" xmlns:v8ui="http://v8.1c.ru/8.1/data/ui" xmlns:web="http://v8.1c.ru/8.1/data/ui/colors/web" xmlns:win="http://v8.1c.ru/8.1/data/ui/colors/windows" xmlns:xr="http://v8.1c.ru/8.3/xcf/readable" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.20">
	<AutoTime>CurrentOrLast</AutoTime>
	<UsePostingMode>Auto</UsePostingMode>
	<RepostOnWrite>true</RepostOnWrite>
	<AutoCommandBar name="ФормаКоманднаяПанель" id="-1"/>
	<ChildItems>
		<UsualGroup name="ГруппаШапка" id="1">
			<Representation>None</Representation>
			<ShowTitle>false</ShowTitle>
			<ExtendedTooltip name="ГруппаШапкаРасширеннаяПодсказка" id="2"/>
			<ChildItems>
				<InputField name="Номер" id="3">
					<DataPath>Объект.Number</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
					<ContextMenu name="НомерКонтекстноеМеню" id="4"/>
					<ExtendedTooltip name="НомерРасширеннаяПодсказка" id="5"/>
				</InputField>
				<InputField name="Дата" id="6">
					<DataPath>Объект.Date</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
					<ContextMenu name="ДатаКонтекстноеМеню" id="7"/>
					<ExtendedTooltip name="ДатаРасширеннаяПодсказка" id="8"/>
				</InputField>
			</ChildItems>
		</UsualGroup>
		<!-- {{РЕКВИЗИТЫ_ШАПКИ}}
		     Для каждого реквизита шапки добавить блок:
		<InputField name="{{ИмяРеквизита}}" id="{{N}}">
			<DataPath>Объект.{{ИмяРеквизита}}</DataPath>
			<EditMode>EnterOnInput</EditMode>
			<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
			<ContextMenu name="{{ИмяРеквизита}}КонтекстноеМеню" id="{{N+1}}"/>
			<ExtendedTooltip name="{{ИмяРеквизита}}РасширеннаяПодсказка" id="{{N+2}}"/>
		</InputField>
		-->
		<!-- {{ТАБЛИЧНАЯ_ЧАСТЬ}}
		     Для каждой табличной части добавить блок Table.
		     Пример ниже — ТЧ "Товары" с колонками.
		     id нумерация: Table=N, ContextMenu=N+1, AutoCommandBar=N+2, 
		     ExtendedTooltip=N+3, SearchStringAddition=N+4 (дочерние N+5,N+6),
		     ViewStatusAddition=N+7 (дочерние N+8,N+9),
		     SearchControlAddition=N+10 (дочерние N+11,N+12),
		     затем колонки с шагом 3 (элемент, ContextMenu, ExtendedTooltip)
		-->
		<Table name="Товары" id="9">
			<Representation>List</Representation>
			<AutoInsertNewRow>true</AutoInsertNewRow>
			<EnableStartDrag>true</EnableStartDrag>
			<EnableDrag>true</EnableDrag>
			<DataPath>Объект.Товары</DataPath>
			<RowFilter xsi:nil="true"/>
			<ContextMenu name="ТоварыКонтекстноеМеню" id="10"/>
			<AutoCommandBar name="ТоварыКоманднаяПанель" id="11"/>
			<ExtendedTooltip name="ТоварыРасширеннаяПодсказка" id="12"/>
			<SearchStringAddition name="ТоварыСтрокаПоиска" id="13">
				<AdditionSource>
					<Item>Товары</Item>
					<Type>SearchStringRepresentation</Type>
				</AdditionSource>
				<ContextMenu name="ТоварыСтрокаПоискаКонтекстноеМеню" id="14"/>
				<ExtendedTooltip name="ТоварыСтрокаПоискаРасширеннаяПодсказка" id="15"/>
			</SearchStringAddition>
			<ViewStatusAddition name="ТоварыСостояниеПросмотра" id="16">
				<AdditionSource>
					<Item>Товары</Item>
					<Type>ViewStatusRepresentation</Type>
				</AdditionSource>
				<ContextMenu name="ТоварыСостояниеПросмотраКонтекстноеМеню" id="17"/>
				<ExtendedTooltip name="ТоварыСостояниеПросмотраРасширеннаяПодсказка" id="18"/>
			</ViewStatusAddition>
			<SearchControlAddition name="ТоварыУправлениеПоиском" id="19">
				<AdditionSource>
					<Item>Товары</Item>
					<Type>SearchControl</Type>
				</AdditionSource>
				<ContextMenu name="ТоварыУправлениеПоискомКонтекстноеМеню" id="20"/>
				<ExtendedTooltip name="ТоварыУправлениеПоискомРасширеннаяПодсказка" id="21"/>
			</SearchControlAddition>
			<ChildItems>
				<LabelField name="ТоварыНомерСтроки" id="22">
					<DataPath>Объект.Товары.LineNumber</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ContextMenu name="ТоварыНомерСтрокиКонтекстноеМеню" id="23"/>
					<ExtendedTooltip name="ТоварыНомерСтрокиРасширеннаяПодсказка" id="24"/>
				</LabelField>
				<!-- {{КОЛОНКИ_ТЧ}}
				     Для каждой колонки табличной части:
				<InputField name="Товары{{ИмяКолонки}}" id="{{N}}">
					<DataPath>Объект.Товары.{{ИмяКолонки}}</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
					<ContextMenu name="Товары{{ИмяКолонки}}КонтекстноеМеню" id="{{N+1}}"/>
					<ExtendedTooltip name="Товары{{ИмяКолонки}}РасширеннаяПодсказка" id="{{N+2}}"/>
				</InputField>
				-->
				<InputField name="ТоварыНоменклатура" id="25">
					<DataPath>Объект.Товары.Номенклатура</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
					<ContextMenu name="ТоварыНоменклатураКонтекстноеМеню" id="26"/>
					<ExtendedTooltip name="ТоварыНоменклатураРасширеннаяПодсказка" id="27"/>
				</InputField>
				<InputField name="ТоварыКоличество" id="28">
					<DataPath>Объект.Товары.Количество</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
					<ContextMenu name="ТоварыКоличествоКонтекстноеМеню" id="29"/>
					<ExtendedTooltip name="ТоварыКоличествоРасширеннаяПодсказка" id="30"/>
				</InputField>
				<InputField name="ТоварыЦена" id="31">
					<DataPath>Объект.Товары.Цена</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
					<ContextMenu name="ТоварыЦенаКонтекстноеМеню" id="32"/>
					<ExtendedTooltip name="ТоварыЦенаРасширеннаяПодсказка" id="33"/>
				</InputField>
				<InputField name="ТоварыСумма" id="34">
					<DataPath>Объект.Товары.Сумма</DataPath>
					<EditMode>EnterOnInput</EditMode>
					<ExtendedEditMultipleValues>true</ExtendedEditMultipleValues>
					<ContextMenu name="ТоварыСуммаКонтекстноеМеню" id="35"/>
					<ExtendedTooltip name="ТоварыСуммаРасширеннаяПодсказка" id="36"/>
				</InputField>
			</ChildItems>
		</Table>
	</ChildItems>
	<Attributes>
		<Attribute name="Объект" id="1">
			<Type>
				<v8:Type>cfg:DocumentObject.{{ИМЯ_ДОКУМЕНТА}}</v8:Type>
			</Type>
			<MainAttribute>true</MainAttribute>
			<SavedData>true</SavedData>
			<UseAlways>
				<Field>Объект.RegisterRecords</Field>
			</UseAlways>
		</Attribute>
	</Attributes>
</Form>